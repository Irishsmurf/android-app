<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Accent color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- App bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Nav bar -->
        <item name="android:navigationBarColor">@color/dark_grey</item>

        <!-- Base background/text colors -->
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_grey</item>

        <!-- UI widget theming -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="materialButtonStyle">@style/ButtonTheme</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="tabStyle">@style/TabTheme</item>
        <item name="dialogTheme">@style/DialogTheme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
    </style>

    <!-- TabHost -->
    <style name="TabTheme" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabIconTint">@color/white</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- About card item -->
    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/md_listitem_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:theme">@style/Base.ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!-- Licenses dialog -->
    <string name="licenses_css" translatable="false">
        body {
            background: #1D1F2B;
            color: #FFF;
            overflow-wrap: break-word;
        }
        a {
            color: #EC1A55;
        }
        pre {
            background-color: #2B2E41;
            padding: 1em;
            white-space: pre-wrap;
        }
    </string>

</resources>
