<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/four_dark_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_grey</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:textAppearanceButton">@style/ButtonTheme</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- 3.0 + 1.0 theme -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowBackground">@color/four_dark_grey</item>

        <item name="themeColorAccent">@color/colorAccent</item>
        <item name="themeBackgroundImage">@drawable/background_four</item>
        <item name="themeLogoImage">@drawable/logo</item>
        <item name="themeDefaultAvatarImage">@drawable/avatar_v4</item>
    </style>

    <!-- Christmas theme -->
    <style name="AppThemeChristmas" parent="AppTheme">
        <item name="colorPrimary">@color/christmas_accent</item>
        <item name="colorPrimaryDark">@color/christmas_accent</item>
        <item name="colorAccent">@color/christmas_accent</item>

        <item name="themeColorAccent">@color/christmas_accent</item>
        <item name="themeBackgroundImage">@drawable/background_christmas</item>
        <item name="themeLogoImage">@drawable/logo_christmas</item>
        <item name="themeDefaultAvatarImage">@drawable/avatar_kanna_christmas</item>
    </style>

    <!-- TabHost -->
    <style name="TabWidgetTheme" parent="AppTheme">
        <item name="android:textColorPrimary">?attr/themeColorAccent</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorLink">?attr/themeColorAccent</item>
        <item name="colorAccent">?attr/themeColorAccent</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonTheme" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- About card item -->
    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/md_listitem_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:theme">@style/Base.ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!-- Licenses dialog -->
    <string name="licenses_css" translatable="false">
        body {
            background: #1D1F2B;
            color: #FFF;
            overflow-wrap: break-word;
        }
        a {
            color: #EC1A55;
        }
        pre {
            background-color: #2B2E41;
            padding: 1em;
            white-space: pre-wrap;
        }
    </string>

</resources>
