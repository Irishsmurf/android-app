<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Accent color -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- App bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Nav bar -->
        <item name="android:navigationBarColor">@color/darker_grey</item>

        <!-- Base background/text colors -->
        <item name="android:windowBackground">@color/darker_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_grey</item>

        <!-- UI widget theming -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="materialButtonStyle">@style/ButtonTheme</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="dialogTheme">@style/DialogTheme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Dialogs -->
    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/darker_grey</item>
        <!-- TODO: not sure why buttons aren't white anymore -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_button_states</item>
    </style>
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/color_button_states</item>
        <item name="strokeColor">@color/color_button_states</item>
        <item name="iconTint">@color/color_button_states</item>
    </style>

    <!-- About card item -->
    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/md_listitem_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:theme">@style/Base.ThemeOverlay.AppCompat.Dark</item>
    </style>

    <!-- Licenses dialog -->
    <string name="licenses_css" translatable="false">
        body {
            background: #1D1F2B;
            color: #FFF;
            overflow-wrap: break-word;
        }
        a {
            color: #EC1A55;
        }
        pre {
            background-color: #2B2E41;
            padding: 1em;
            white-space: pre-wrap;
        }
    </string>

</resources>
